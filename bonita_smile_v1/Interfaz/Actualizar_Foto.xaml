<Page x:Class="bonita_smile_v1.Page8_ActualizarFoto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bonita_smile_v1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="Page8_IngresarFoto">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  >
        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition  Height="100" />
                <RowDefinition Height="500"/>
                <RowDefinition Height="20"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="1000"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="1" Margin="0,20,0,0" Background="White"  BorderBrush="Silver" BorderThickness="1" CornerRadius="8 8 3 3 " Height="auto" Width="auto">
                <Grid Margin="10">
                    <TextBlock Foreground="#FF3580BF" FontSize="55" FontWeight="Bold"   Text="Actualizar foto" Margin="0,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1"  Background="White"  BorderBrush="Silver" BorderThickness="1" CornerRadius="8 8 3 3 " Height="auto" Width="auto">
                <Grid Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Height="40" Margin="189,57,0,0" VerticalAlignment="Top" Width="250"  Style="{StaticResource MetroComboBox}"/>
                    <Label Content="Seleccionar Dispositivo" HorizontalAlignment="Left"  Margin="10,52,0,0" VerticalAlignment="Top" Height="42" Width="173" FontSize="15" Foreground="Black"/>
                    <Button  x:Name="btnencender" Content="Encender Camara" Height="40" Margin="79,112,282.333,0" VerticalAlignment="Top" Width="93" Click="Button_Click" HorizontalAlignment="Left"/>
                    <Button x:Name="btncapturar" Content="Capturar" HorizontalAlignment="Center" Height="40" Margin="9.667,112,0,0" VerticalAlignment="Top" Width="93" Grid.Column="1" Click="Button_Click_2"/>
                    <Button x:Name="btnSiguiente" Content="Finalizar" Grid.Column="1" HorizontalAlignment="Right" Height="40" Margin="9.667,112,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click_1"/>
                    <Button x:Name="btnOmitir" Content="Finalizar(omitir foto)" Grid.Column="1" HorizontalAlignment="Right" Height="40" Margin="9.667,150,0,0" VerticalAlignment="Top" Width="150" Click="btnOmitir_Click"/>
                    <Image x:Name="img1" HorizontalAlignment="Left" Height="500" Margin="440,165,0,0" VerticalAlignment="Top" Width="340" />
                    <Rectangle x:Name="rt_imagen" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="255" Margin="35,165,500,0" Stroke="Black" VerticalAlignment="Top" Width="340"/>



                </Grid>
            </Border>



        </Grid>
    </ScrollViewer>
</Page>

