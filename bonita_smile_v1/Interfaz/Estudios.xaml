<Page x:Class="bonita_smile_v1.Pagina_Estudios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bonita_smile_v1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pagina_Estudios">

    <Grid>

        <Button Content="Crear Nueva Carpeta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" RenderTransformOrigin="1.267,2.5" Margin="15,280,0,0" Click="Button_Click_1"/>
        <Button Content="Agregar Estudios a la carpeta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Margin="5,345,0,0" Click="Button_Click"/>
        <ListView  x:Name="lvCarpetas"  Margin="400,90,180,65"   Style="{StaticResource MetroListView}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Control.Background" Value="White" />
                    <Setter Property="Control.BorderThickness" Value="0.2" />
                    <Setter Property="Control.BorderBrush" Value="Black" />
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontSize" Value="13"/>


                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View >
                <GridView >

                    <GridViewColumn Header="Nombre de Carpeta" Width="250" DisplayMemberBinding="{Binding nombre_carpeta}" />

                   <!-- <GridViewColumn Header="Nombre Paciente" Width="250" DisplayMemberBinding="{Binding costo}" />-->

                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Mostrar Imagenes de la Carpeta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Margin="10,398,0,0" Click="Button_Click_2"/>

    </Grid>
</Page>
